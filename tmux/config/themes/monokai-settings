# Dracula theme config
# available plugins: battery, cpu-usage, git, gpu-usage, ram-usage, network, network-bandwidth, network-ping, weather, time
set -g @monokai-plugins "git network weather cpu-usage ram-usage"

# Set left icon to smiley
set -g @monokai-show-left-icon 'ðŸ’€'

# Set git options
set -g @monokai-git-show-current-symbol ðŸš€ 
set -g @monokai-git-show-diff-symbol ðŸŽ¯
set -g @monokai-git-show-remote-status true
