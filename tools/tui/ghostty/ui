# Disable the prompt for confirmation when closing a window.
confirm-close-surface=false

# Theme for Dark and Light
theme = dark:Monokai Pro,light:Monokai Pro Light
# Background opacity and blur radius
background-opacity=0.8
background-blur-radius=20

# Hide the title
title = " "

# Windows won't have native decorations, i.e. titlebar and borders.
window-decoration=false

# stick with the system window theme
window-theme=auto

# Default window size
window-height=34
window-width=127

window-padding-color = background
window-padding-x = 0
window-padding-y = 0
window-padding-balance = false
adjust-cell-height = 10%

mouse-hide-while-typing = true
cursor-invert-fg-bg = true
